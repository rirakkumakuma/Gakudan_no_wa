<%= render'members/list' %>
<h2 class="text-center mt-3"><%= @member.full_name %>さんの団員情報編集</h2>
<!--<div class="flex-column align-items-center justify-content-center" style="height:660px; width:100%;">-->
<div class="container d-flex flex-column align-items-center justify-content-center mt-3">
<%= form_with model: @member, url: members_update_path, local: true do |f| %>

    <div class="form-row">
    <div class="field col-md-6">
      <label for="last_name mb-0 pb-0"><h5><%= f.label :（姓） %></h5></label>
      <h5><%= f.text_field :last_name,autofocus: true, placeholder:"山田", class: 'form-control', style: "width:90%" %></h5>
     </div>
      <div class="form-group col-md-6">
        <label for="first_name4"><h5><%= f.label :（名） %></h5></label>
        <h5><%= f.text_field :first_name,autofocus: true, placeholder:"太郎", class: 'form-control', style: "width:90%" %></h5>
      </div>
     </div>

     <div class="form-row">
      <div class="form-group col-md-6">
        <label for="last_name4"><h5><%= f.label :（セイ） %></h5></label>
        <h5><%= f.text_field :last_name_kana,autofocus: true,placeholder:"ヤマダ", class: 'form-control', style: "width:90%" %></h5>
      </div>
      <div class="form-group col-md-6">
        <label for="first_name4"><h5><%= f.label :（メイ） %></h5></label>
        <h5><%= f.text_field :first_name_kana,autofocus: true,placeholder:"タロウ", class: 'form-control', style: "width:90%" %></h5>
      </div>
    </div>

     <div class="form-row">
      <div class="form-group col-md-10">
        <label for="e-mail4"><h5><%= f.label :メールアドレス %></h5></label>
        <h5><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@gmail.com", class: 'form-control', style: "width:90%"  %></h5>
      </div>
    </div>

     <div class="actions text-center">
        <%= f.submit "変更を保存", class: 'btn btn-primary mb-5' %>
     </div>
  <% end %>
</div>
