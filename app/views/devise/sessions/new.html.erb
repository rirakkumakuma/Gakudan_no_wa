<div class="container-log-in-content d-flex flex-column align-items-center justify-content-center mt-5 pt-5" style="height:500px;">
  <h2>団員ログイン</h2>
  <%= form_with model: @member, url: member_session_path, local: true do |f| %>
    <div class="field mt-5 text-center">
      <h4><%= f.label :メールアドレス %></h4>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mt-3 text-center">
      <h4><%= f.label :パスワード %></h4>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

  　<% if devise_mapping.rememberable? %>
    <div class="field">
      <h4><%= f.check_box :remember_me %>
      <%= f.label :メールアドレスとパスワードを記憶する %></h4>
    </div>
    <% end %>

  　<div class="actions">
    　<%= f.submit "ログイン",class: "btn btn-primary" %>
  　</div>
　<% end %>

　<%= render "devise/shared/links" %>
</div>