<div class="container-log-in-content d-flex flex-column align-items-center justify-content-center mt-5 pt-5">
  <h2 class="test-center">団員ログイン</h2>
  <form class="text-center">
    <%= form_with model: @member, url: member_session_path, local: true do |f| %>

    <div class="form-row mt-5">
      <div class="form-group col-md-10">
        <label for="e-mail4"><h5><%= f.label :メールアドレス %></h5></label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-row mt-5">
      <div class="form-group col-md-10">
          <label for="password4"><h5><%= f.label :パスワード %></h5></label>
          <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

  　<% if devise_mapping.rememberable? %>
    <div class="field">
      <h5><%= f.check_box :remember_me %>
      <%= f.label :メールアドレスとパスワードを記憶する %></h5>
    </div>
    <% end %>

  　<div class="actions">
    　<%= f.submit "ログイン",class: "btn btn-primary" %>
  　</div>
　  <% end %>

　  <%= render "devise/shared/links" %>
  </form>
</div>