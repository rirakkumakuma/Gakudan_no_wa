<h2><%= t "devise.invitations.edit.氏名とパスワードの設定" %></h2>

<%= form_with model: @member, url: member_invitation_path, method: :put, local: true do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <div class="field">
      <%= f.label :（姓） %>
      <%= f.text_field :last_name,autofocus: true %><br />
      <%= f.label :（名） %>
      <%= f.text_field :first_name,autofocus: true %><br />
    </div>

    <div class="field">
      <%= f.label :（セイ） %>
      <%= f.text_field :last_name_kana,autofocus: true %><br />
      <%= f.label :（メイ） %>
      <%= f.text_field :first_name_kana,autofocus: true %><br />
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t("devise.invitations.edit.submit_button") %>
  </div>
<% end %>
